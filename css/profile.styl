
$thumbnail-dim = 160px

.profile
  margin 0 0 0 10%
  
  h1
    margin-top 69px
    font-size 24px
  
  p
    font-size 12px
    font-weight 100
  
  h2
    color #000d18
    font-size 11px
    font-weight 600
    text-shadow 0px 1px 0px rgba(255, 255, 255, 0.25)
    text-transform uppercase
    padding 30px 0
    
    &.border
      border-bottom 1px solid #003461
      box-shadow 0px 1px 0px #0072C9
  
  .user
    display none
    
    &.show
      display block
      
  .no-user
    
    &.hide
      display none
  
  .subjects
    max-width 896px
    
    ul
      padding 0
      
      li
        display inline-block
        margin-bottom 30px
        
        img
          margin-bottom -3px

  .pagination
    padding-top 10px
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    -o-user-select none
    user-select none
    
    div
      display inline-block
      cursor pointer
      width 0
      height 0
    
    .next
      border-top: 8px solid transparent
      border-left: 12px solid black
      border-bottom: 8px solid transparent
      
      &:hover
        border-left-color #FAFAFA
      
    .previous
      border-top: 8px solid transparent
      border-right: 12px solid black
      border-bottom: 8px solid transparent
      
      &:hover
        border-right-color #FAFAFA