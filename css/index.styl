@import "../node_modules/nib/lib/nib/"

$white       = #FFFFFF
$black       = #404040

$orange      = #E15500
$lightorange = #E36939
$duskyorange = #9A3B01

$blue        = #0056B6 // = rgb(0,92,183) or very close
$lightblue   = #006EC8 // = rgb(0,111,201) or very close
$duskyblue   = #034777 // = rgb(3, 71, 119)
$brightblue  = #2E82BF // = rgb(46, 130, 191)
$darkblue    = #013A66
$darkerblue  = #003461 // = rgb(0,52,96) or very close
$lighterblue = #0072C9
$cyan        = #01A0E2

$background         = $blue
$lightbackground    = $lightblue
$textshadow         = $darkblue
$headingline        = $darkerblue
$headinglineshadow  = $lighterblue
$boxline            = $darkerblue
$boxlineshadow      = $lighterblue
$tabtext            = $brightblue
$tabbackground      = $duskyblue
$figureshadow       = $duskyblue
$qghighlight        = $cyan


$nav-width  = 200px
$img-dim    = 441px

@import "../node_modules/zooniverse/css/top-bar.css"
@import "../node_modules/zooniverse/css/dialog.css"
@import "../node_modules/zootorial/zootorial.css"

@import './common'
@import './pages'

@import './home'
@import './classifier'
@import './profile'
@import "./project-results"

@import './annotation'
@import './controls'
@import './tutorial'
@import './quick_guide'
@import './counters'
@import './tooltip'

.zooniverse-top-bar
  position fixed

.language-picker
  float left
  margin 10px 10px 10px 220px

  select
    appearance: none
    background: transparent
    border: 0
    color: $white
    font: inherit
    font-size: 10px

    option
      color: $white
      background: $black

body
  background url('images/blue.jpg') repeat
  margin 0 auto
  font-family helvetica neue, helvetica, sans-serif
  color $white
  width 100%
  height 100%
  border-top 5px solid black

  > .stack-of-pages
    box-sizing border-box
    margin 0 0 0 $nav-width

  p
    font-size 13px
    font-weight 400
    line-height 20px
    margin 1.2em 0 1em 0

  nav
    background rgb(0, 12, 24)
    border-right 1px solid #003056, 55%
    box-shadow 1px 0 22px 0 rgba(#000, 1)
    position fixed
    top 0
    left 0
    z-index 2
    overflow-x hidden
    overflow-y auto

    float left
    width $nav-width
    height 100%
    margin 0
    padding 0

    &:before
      background #030303
      content ""
      height 100%
      position absolute
      right -2px
      top 0
      width 1px

    a
      position relative
      display block
      box-sizing border-box
      max-width $nav-width
      height 11vh
      min-height 65px
      border-top 1px solid rgb(0, 30, 54)
      border-bottom 1px solid rgb(0, 30, 54)
      text-align center
      font-size 11px
      text-decoration none
      color $white
      background-repeat no-repeat
      background-position center 30%
      background-size auto 30%
      border-left 3px solid rgba(225, 85, 0, 0)
      padding 0

      &:hover
        background-color rgb(0, 0, 0)
      &.active
        border-left 3px solid rgb(225, 85, 0)

      i
        left calc(50% - 13px)
        position absolute
        top calc(50% - 18px)

      span
        position absolute
        width 100%
        left 0
        padding-bottom 12%
        bottom 0

    a[data-page="home"]
      font-size 14px
      font-weight 700
      letter-spacing 4px
      text-transform uppercase
      height 120px
      padding 0

      span
        padding-bottom 25%

      .small
        text-align center
        font-size 8px
        margin-top 60px

    a[data-page="classifier"]
      background-image url('images/classify.png')
    a[data-page="about"]
      background-image url('images/about.png')
    a[data-page="guide"]
      background-image url('images/spotter.png')
    a[data-page="dashboard"]
      background-image url('images/dashboard.png')
    a[data-page="profile"]
      background-image url('images/profile.png')
    a[data-page="discuss"]
      background-image url('images/discuss.png')
    a[data-page="faq"]
      background-image url('images/faq.png')
